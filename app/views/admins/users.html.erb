<div class="row">
  <div class="col-md-2">&nbsp;</div>
  <div class="col-md-8">
    <%= form_tag(admins_path, method: :put, :role => 'form') do %>
    <table class="table table-condensed table-responsive">
      <thead>
        <th>Email Address</th>
        <th>Created at</th>
        <th>Roles</th>
      </thead>
      <tbody>
        <% for user in @users %>
        <tr class="<%= role_to_context(user.role) %>">
          <%= fields_for "users[]", user do |f| %>
            <td><%= h user.email %></td>
            <td><%=h user.created_at.strftime("%Y-%B-%e") %></td>
            <td><%= f.collection_select :role, User::ROLES, :to_s, :humanize, {:selected => user.role}, :class => 'form-control' %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3">
            <%= submit_tag "Submit", :class => "btn btn-primary btn-block" %>
          </td>
        </tr>
      </tfoot>
    </table>
    <% end %>

    <center><%= paginate @users %></center>
  </div>
  <div class="col-md-2">&nbsp;</div>
</div>