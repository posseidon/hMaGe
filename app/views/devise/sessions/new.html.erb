<div class="row">
  <div class="col-md-4">&nbsp;</div>
  <div class="col-md-4">
    <h2><%= t(:signin, :scope => [:application]) %></h2>
    <hr>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :role => 'form') do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, :class => 'form-control', required: true%>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, :class => 'form-control', required: true%>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div><%= f.submit t(:signin, :scope => [:application]), :class => 'btn btn-primary btn-block' %></div>
    <% end %>
  </div>
  <div class="col-md-4">&nbsp;</div>
</div>
<br>
<div class="row">
  <div class="col-md-4">&nbsp;</div>
  <div class="col-md-4">
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-md-4">&nbsp;</div>
</div>