<script type="text/javascript">
  $(document).ready(function(){
    init();

    console.log("END");
  });

  function setData(){
    var features = vectorLayer.features;
    for(idx in features){
      var feature = features[idx];
      var wkt = formats['out']['wkt'].write(feature, false);
      $("#geometry").val(wkt);
    }
  }
</script>
