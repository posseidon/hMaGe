<div id="maps_table">
  <table class="table table-striped table-responsive">
  <thead>
    <th>#</th>
    <th>Kind</th>
    <th>Name</th>
    <th>Meretarany</th>
    <th>Resolution</th>
    <th>Publisher</th>
    <th>Size</th>
    <th>Imported</th>
    <th>Processed</th>
  </thead>
  <tbody>
    <% maps.each do |map| %>
    <tr>
      <td>
        <a href="<%= map.image.url(:small) %>" data-toggle="lightbox" data-title="<%= map.image.original_filename %>">
          <%= map.id %>
        </a>
      </td>
      <td><%= map.kind %></td>
      <td>
      <% if can? :read, Map %>
        <%= link_to map.name, map_path(map.id) %>
      <% else %>
        <%= map.name %>
      <% end %>
      </td>
      <td>
        <%= map.size %>
      </td>
      <td><%= map.resolutuon %></td>
      <td>
        <%= map.publisher %>
      </td>
      <td><%= number_to_human_size(map.image.size) %></td>
      <td><%= map.created_at.strftime("%Y-%B-%e") %></td>
      <td><%= status_to_icon(map.processed) %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>
