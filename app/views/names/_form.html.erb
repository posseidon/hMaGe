<%= form_for name, :html => {:class => "form-horizontal", :role => "form"} do |f| %>
  <%= render "shared/error_messages", :target => name %>
  <div class="form-group">
    <div class="col-sm-3">
      <%= f.label :original, :class => "control-label" %>
    </div>
    <div class="col-sm-9">
      <%= f.text_field :original, :class => "form-control", :placeholder => t(:placeholder_original, :scope => [:name]), :type => "text", :required => true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-3">
      <%= f.label :current, :class => "control-label" %>
    </div>
    <div class="col-sm-9">
      <%= f.text_field :current, :class => "form-control", :placeholder => t(:placeholder_current, :scope => [:name]), :type => "text", :required => true %>
    </div>
  </div>
  <hr>
  <div class="form-group">
      <%= cktext_area :name, :description, :cols => 40, :ckeditor => {:toolbar => 'mini'} %>
  </div>

  <%= f.hidden_field :latlon %>

  <div class="form-group">
    <div class="col-sm-6">
      <%= link_to t(:cancel, :scope => [:application]), :back, :class => "btn btn-primary btn-block" %>
    </div>
    <div class="col-sm-6">
      <%= f.submit t(:save, :scope => [:application]), :class => "btn btn-primary btn-block", :onclick => "return setNameWkt();" %>
    </div>
  </div>
<% end %>
