<div class="row">
  <div class="well">
    <%= form_tag search_names_path, :class => "form", :role => "search", :remote => true  do %>
    <div class="input-group">
      <%= text_field_tag :q, nil, :class => "form-control", :placeholder => t(:search_placeholder, :scope => [:application]), :type => "text" %>
      <div class="input-group-btn">
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
          <i class="glyphicon glyphicon-search"></i> <%= t(:search, :scope => [:application]) %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="row" id="mapContainer">
  <div id='map'></div>
</div>
<br>
<div class="row" id="townsContainer">
  <%= render :partial => 'names', :locals => {:names => @names} %>
</div>
